  <div class="container">
    <h1>Will you be my Valentine? ðŸ’˜</h1>

    <div class="buttons" id="buttons">
      <button id="yesBtn">Yes ðŸ’–</button>
      <button id="noBtn">No ðŸ˜…</button>
    </div>

    <div class="result" id="result">
      <h2>Excellent choice ðŸ˜Œ</h2>
      <div class="meme">ðŸŒ¹ðŸ’–ðŸ¥°ðŸŒ¹</div>
      <p>Outstanding decision. This will be taught in future textbooks ðŸ“šðŸ’–ðŸ§ </p>
    </div>
  </div>

  <script>
    const noBtn = document.getElementById("noBtn");
    const yesBtn = document.getElementById("yesBtn");
    const result = document.getElementById("result");
    const buttons = document.getElementById("buttons");

    let isFloating = false;
    let currentX = 0;
    let currentY = 0;

    function moveNoButton() {
      const moveBy = 120; // distance per click

      if (!isFloating) {
        // Capture current position once
        const rect = noBtn.getBoundingClientRect();
        currentX = rect.left;
        currentY = rect.top;

        noBtn.style.position = "fixed";
        noBtn.style.left = `${currentX}px`;
        noBtn.style.top = `${currentY}px`;

        isFloating = true;
      }

      // Random direction
      const dx = (Math.random() - 0.5) * moveBy;
      const dy = (Math.random() - 0.5) * moveBy;

      currentX += dx;
      currentY += dy;

      // Clamp to viewport
      const maxX = window.innerWidth - noBtn.offsetWidth - 10;
      const maxY = window.innerHeight - noBtn.offsetHeight - 10;

      currentX = Math.max(10, Math.min(currentX, maxX));
      currentY = Math.max(10, Math.min(currentY, maxY));

      noBtn.style.left = `${currentX}px`;
      noBtn.style.top = `${currentY}px`;
    }

    noBtn.addEventListener("click", moveNoButton);

    yesBtn.addEventListener("click", () => {
      buttons.style.display = "none";
      result.style.display = "block";
    });
  </script>
